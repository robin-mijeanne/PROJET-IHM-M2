<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robin.appliprojet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavorisListe"
            android:label="@string/title_activity_favoris_liste"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AchatsListe"
            android:label="@string/title_activity_achats_liste"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Recherche"
            android:label="@string/title_activity_recherche"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>